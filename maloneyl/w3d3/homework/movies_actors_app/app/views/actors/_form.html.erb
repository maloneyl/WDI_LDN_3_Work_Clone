<%= form_for @actor do |f| %>
  <fieldset>
    <legend>Actor/Actress Details</legend>
    <div class="field">
      <%= f.label :first_name, "First Name" %>
      <%= f.text_field :first_name %>
    </div>
    <div class="field">
      <%= f.label :last_name, "Last Name" %>
      <%= f.text_field :last_name %>
    </div>
    <div class="field">
      <%= f.label :birthdate, "Date of Birth" %>
      <%= f.date_select :birthdate, start_year: 1900, end_year: Time.now.year, include_blank: true %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  </fieldset>
<% end %>