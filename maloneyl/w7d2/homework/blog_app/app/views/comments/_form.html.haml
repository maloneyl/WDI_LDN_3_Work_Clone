= form_for([@post, @comment]) do |f|
  - if @comment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@comment.errors.count, "error")} prohibited this comment from being saved:"
      %ul
        - @comment.errors.full_messages.each do |msg|
          %li= msg

  .field
    %p
      %b= f.label :user, "User"
      %br/
      = current_user.name
  .field
    %p
      %b= f.label :body, "Comment"
      %br/
      = f.text_area :body
  .actions
    = f.submit
